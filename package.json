{
  "name": "valvegamesannouncerbot",
  "version": "0.1.0",
  "description": "A notification bot for Dota 2 and Artifact.",
  "main": "src/_main.ts",
  "scripts": {
    "build": "tsc --build",
    "dev": "concurrently --kill-others \"yarn watch\" \"yarn serve\"",
    "deploy": "yarn demolish && yarn install && yarn build",
    "coverage": "jest --collectCoverageFrom=src/**.ts --coverage src",
    "lint": "tslint --config tslint.json --format stylish --project tsconfig.json 'src/**/*.ts'",
    "demolish": "rimraf dist",
    "serve": "nodemon --watch dist dist/_main.js",
    "start": "node dist/_main.js",
    "test": "jest tests",
    "watch": "tsc --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TimJentzsch/valveGamesAnnouncerBot.git"
  },
  "author": "Tim Jentzsch",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/TimJentzsch/valveGamesAnnouncerBot/issues"
  },
  "homepage": "https://github.com/TimJentzsch/valveGamesAnnouncerBot#readme",
  "engines": {
    "node": "^10.15.3",
    "yarn": "^1.3.2"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "husky": "^1.2.1",
    "install-peerdeps": "^1.9.0",
    "jest": "^23.6.0",
    "nodemon": "^1.18.10",
    "prettier": "1.15.3",
    "tslint": "^5.12.0",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.2.2",
    "yarn": "^1.15.3"
  },
  "dependencies": {
    "@types/escape-string-regexp": "^1.0.0",
    "@types/jsdom": "^12.2.1",
    "@types/node": "^10.12.18",
    "@types/node-telegram-bot-api": "^0.30.3",
    "@types/showdown": "^1.9.2",
    "@types/snoowrap": "^1.15.1",
    "@types/xml2js": "^0.4.3",
    "discord.js": "^11.4.2",
    "escape-string-regexp": "^1.0.5",
    "feed-read": "^0.0.1",
    "fs": "^0.0.1-security",
    "node-telegram-bot-api": "^0.30.0",
    "pm2": "^3.5.0",
    "rss-parser": "^3.6.0",
    "snoowrap": "^1.15.2",
    "turndown": "^5.0.3",
    "winston": "^3.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  }
}
