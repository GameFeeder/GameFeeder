{
  "name": "gamefeeder",
  "version": "0.13.8",
  "description": "A notification bot for several games, available on Discord and Telegram.",
  "main": "src/_main.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GameFeeder/GameFeeder"
  },
  "author": "Tim Jentzsch",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/GameFeeder/GameFeeder/issues"
  },
  "homepage": "https://github.com/GameFeeder/GameFeeder",
  "engines": {
    "node": "^12",
    "yarn": "^1.16.0"
  },
  "scripts": {
    "build": "tsc --build",
    "dev": "yarn build && concurrently --kill-others \"yarn watch\" \"yarn serve\"",
    "deploy": "yarn install --frozen-lockfile && yarn demolish && yarn build",
    "demolish": "rimraf dist",
    "serve": "nodemon --watch dist --watch config --delay 4 dist/_main.js",
    "start": "node dist/_main.js",
    "lint": "eslint \"src/**/*.ts\"",
    "format": "eslint \"src/**/*.ts\" --fix",
    "test": "jest --coverage",
    "coverage": "jest --collectCoverageFrom=src/**.ts --coverage src",
    "watch": "tsc --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "env FORCE_COLOR=1 yarn lint",
      "pre-push": "env FORCE_COLOR=1 yarn build"
    }
  },
  "devDependencies": {
    "@types/axios": "0.14.0",
    "@types/cheerio": "0.22.18",
    "@types/jest": "25.2.2",
    "@types/lodash": "4.14.150",
    "@types/node-telegram-bot-api": "0.40.3",
    "@types/node": "12.12.26",
    "@types/request-promise-native": "1.0.17",
    "@types/ws": "7.2.4",
    "@types/xml2js": "0.4.5",
    "@typescript-eslint/eslint-plugin": "2.33.0",
    "@typescript-eslint/parser": "2.33.0",
    "babel-eslint": "10.1.0",
    "concurrently": "5.2.0",
    "eslint-config-airbnb": "18.1.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-jest": "23.11.0",
    "eslint-plugin-prettier": "3.1.3",
    "eslint": "7.0.0",
    "husky": "4.2.5",
    "jest": "26.0.1",
    "nodemon": "2.0.3",
    "prettier": "2.0.3",
    "ts-jest": "25.5.1",
    "typescript": "3.9.2"
  },
  "dependencies": {
    "axios": "0.19.2",
    "cheerio": "1.0.0-rc.3",
    "discord.js": "12.2.0",
    "escape-string-regexp": "2.0.0",
    "feed-read": "0.0.1",
    "lodash": "4.17.15",
    "logform": "2.1.2",
    "node-telegram-bot-api": "0.50.0",
    "request-promise-native": "1.0.8",
    "request": "2.88.2",
    "rss-parser": "3.8.0",
    "smart-request-balancer": "2.1.1",
    "snoowrap": "1.21.0",
    "turndown": "6.0.0",
    "winston": "3.2.1"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}
