{
  "name": "gamefeeder",
  "version": "0.14.2",
  "description": "A notification bot for several games, available on Discord and Telegram.",
  "main": "src/_main.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GameFeeder/GameFeeder"
  },
  "author": "Tim Jentzsch",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/GameFeeder/GameFeeder/issues"
  },
  "homepage": "https://github.com/GameFeeder/GameFeeder",
  "engines": {
    "node": "^12",
    "yarn": "^1.16.0"
  },
  "scripts": {
    "build": "tsc --build",
    "dev": "yarn build && concurrently --kill-others \"yarn watch\" \"yarn serve\"",
    "deploy": "yarn install --frozen-lockfile && yarn demolish && yarn build",
    "demolish": "rimraf dist",
    "serve": "nodemon --watch dist --watch config --delay 4 dist/_main.js",
    "start": "node dist/_main.js",
    "lint": "eslint \"src/**/*.ts\"",
    "format": "eslint \"src/**/*.ts\" --fix",
    "test": "jest --coverage",
    "coverage": "jest --coverage",
    "watch": "tsc --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "env FORCE_COLOR=1 yarn lint",
      "pre-push": "env FORCE_COLOR=1 yarn build"
    }
  },
  "devDependencies": {
    "@types/axios": "0.14.0",
    "@types/cheerio": "0.22.21",
    "@types/jest": "26.0.13",
    "@types/lodash": "4.14.161",
    "@types/node": "14.6.3",
    "@types/node-telegram-bot-api": "0.50.2",
    "@types/request-promise-native": "1.0.17",
    "@types/ws": "7.2.6",
    "@types/xml2js": "0.4.5",
    "@typescript-eslint/eslint-plugin": "3.10.1",
    "@typescript-eslint/parser": "3.10.1",
    "babel-eslint": "10.1.0",
    "concurrently": "5.3.0",
    "eslint": "7.8.1",
    "eslint-config-airbnb": "18.2.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-jest": "23.20.0",
    "eslint-plugin-prettier": "3.1.4",
    "husky": "4.2.5",
    "jest": "26.4.2",
    "nodemon": "2.0.4",
    "prettier": "2.1.1",
    "ts-jest": "26.3.0",
    "typescript": "4.0.2"
  },
  "dependencies": {
    "axios": "0.20.0",
    "cheerio": "1.0.0-rc.3",
    "discord.js": "12.3.1",
    "escape-string-regexp": "4.0.0",
    "lodash": "4.17.20",
    "logform": "2.2.0",
    "node-telegram-bot-api": "0.50.0",
    "request": "2.88.2",
    "request-promise-native": "1.0.9",
    "rss-parser": "3.9.0",
    "smart-request-balancer": "2.1.1",
    "snoowrap": "1.21.0",
    "turndown": "6.0.0",
    "winston": "3.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "preset": "ts-jest",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/tests/",
      "/docs/",
      "/data/",
      "/config/",
      "/@types/",
      ".vscode",
      ".github",
      ".devcontainer"
    ]
  }
}
