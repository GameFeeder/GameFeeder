{
  "name": "gamefeeder",
  "version": "0.9.0",
  "description": "A notification bot for several games, available on Discord and Telegram.",
  "main": "src/_main.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GameFeeder/GameFeeder"
  },
  "author": "Tim Jentzsch",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/GameFeeder/GameFeeder/issues"
  },
  "homepage": "https://github.com/GameFeeder/GameFeeder",
  "engines": {
    "node": "^12",
    "yarn": "^1.16.0"
  },
  "scripts": {
    "build": "tsc --build",
    "dev": "concurrently --kill-others \"yarn watch\" \"yarn serve\"",
    "deploy": "yarn install && yarn demolish && yarn build",
    "demolish": "rimraf dist",
    "serve": "nodemon --watch dist --watch config --delay 4 dist/_main.js",
    "start": "node dist/_main.js",
    "lint": "tslint --config tslint.json --format stylish --project tsconfig.json",
    "format": "tslint --config tslint.json --format stylish --project tsconfig.json --fix",
    "test": "jest --coverage",
    "coverage": "jest --collectCoverageFrom=src/**.ts --coverage src",
    "watch": "tsc --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "pre-push": "yarn build"
    }
  },
  "devDependencies": {
    "@types/jest": "25.1.2",
    "concurrently": "5.1.0",
    "husky": "4.2.1",
    "jest": "25.1.0",
    "nodemon": "2.0.2",
    "prettier": "1.19.1",
    "ts-jest": "25.2.0",
    "tslint": "6.0.0",
    "tslint-config-airbnb": "5.11.2",
    "tslint-config-prettier": "1.18.0",
    "tslint-plugin-prettier": "2.1.0",
    "typescript": "3.7.5"
  },
  "dependencies": {
    "@discordjs/uws": "10.149.0",
    "@types/cheerio": "0.22.16",
    "@types/jsdom": "12.2.4",
    "@types/lodash": "4.14.149",
    "@types/node": "12.12.26",
    "@types/node-telegram-bot-api": "0.40.2",
    "@types/request-promise-native": "1.0.17",
    "@types/showdown": "1.9.3",
    "@types/xml2js": "0.4.5",
    "cheerio": "1.0.0-rc.3",
    "discord.js": "11.5.1",
    "escape-string-regexp": "2.0.0",
    "feed-read": "0.0.1",
    "fs": "0.0.1-security",
    "lodash": "4.17.15",
    "node-telegram-bot-api": "0.40.0",
    "request": "2.88.0",
    "request-promise-native": "1.0.8",
    "rss-parser": "3.7.5",
    "snoowrap": "1.20.1",
    "turndown": "5.0.3",
    "winston": "3.2.1"
  }
}
