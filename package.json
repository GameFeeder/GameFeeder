{
  "name": "gamefeeder",
  "version": "0.17.5",
  "description": "A notification bot for several games, available on Discord and Telegram.",
  "main": "src/_main.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GameFeeder/GameFeeder"
  },
  "author": "Tim Jentzsch",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/GameFeeder/GameFeeder/issues"
  },
  "homepage": "https://github.com/GameFeeder/GameFeeder",
  "engines": {
    "node": ">=12",
    "yarn": ">=1.16.0"
  },
  "scripts": {
    "build": "tsc --build",
    "dev": "nodemon --watch \"src/**\" --ext \"ts,json\" --exec \"ts-node src/_main.ts\"",
    "start": "node dist/src/_main.js",
    "lint": "eslint \"src/**/*.ts\" \"tests/**/*.spec.ts\"",
    "format": "eslint \"src/**/*.ts\" --fix",
    "test": "jest --config jest.config.json",
    "coverage": "jest --config jest.config.json --coverage",
    "watch": "tsc --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "env FORCE_COLOR=1 yarn lint",
      "pre-push": "env FORCE_COLOR=1 yarn build"
    }
  },
  "devDependencies": {
    "@types/lodash": "4.14.167",
    "@types/node": "14.14.21",
    "@types/node-fetch": "2.5.8",
    "@types/node-telegram-bot-api": "0.51.0",
    "@types/pubsub-js": "1.8.2",
    "@types/turndown": "5.0.0",
    "@types/ws": "7.4.0",
    "@types/xml2js": "0.4.7",
    "@typescript-eslint/eslint-plugin": "4.13.0",
    "@typescript-eslint/parser": "4.13.0",
    "concurrently": "5.3.0",
    "eslint": "7.17.0",
    "eslint-config-airbnb-typescript": "12.0.0",
    "eslint-config-prettier": "7.1.0",
    "eslint-import-resolver-typescript": "2.3.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.1.3",
    "eslint-plugin-prettier": "3.3.1",
    "husky": "4.3.7",
    "jest": "26.6.3",
    "nodemon": "2.0.7",
    "prettier": "2.2.1",
    "ts-jest": "26.4.4",
    "ts-node": "9.1.1",
    "typescript": "4.1.3"
  },
  "dependencies": {
    "discord.js": "12.5.1",
    "escape-string-regexp": "4.0.0",
    "lodash": "4.17.20",
    "node-fetch": "2.6.1",
    "node-html-parser": "2.0.0",
    "pubsub-js": "1.9.2",
    "rss-parser": "3.10.0",
    "smart-request-balancer": "2.1.1",
    "snoowrap": "1.21.0",
    "telegraf": "3.38.0",
    "turndown": "7.0.0",
    "winston": "3.3.3"
  }
}
