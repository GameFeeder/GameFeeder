{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "name": { "type": "string" },
    "label": { "type": "string" },
    "aliases": { "type": "array", "items": { "type": "string" } },
    "color": { "type": "string", "format": "color-hex" },
    "icon": { "type": "string" },
    "telegramIVTemplates": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": { "domain": { "type": "string" }, "templateHash": { "type": "string" } }
      }
    },
    "providers": {
      "type": "object",
      "properties": {
        "steam": {
          "type": "object",
          "properties": {
            "appID": { "type": "number" },
            "feeds": { "type": "array", "items": { "type": "string" } }
          },
          "additionalProperties": false
        },
        "rss": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "label": { "type": "string" },
              "url": { "type": "string" },
              "flavor": { "type": "string" }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
