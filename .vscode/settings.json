{
    "editor.tabSize": 2,
    "files.eol": "\n",
    "spellright.documentTypes": [
        "markdown",
        "latex",
        "plaintext"
    ],
    "spellright.language": [
        "en"
    ],
    "diffEditor.ignoreTrimWhitespace": false,
    "files.exclude": {
        "coverage": true,
        "dist": true,
        "node_modules": true,
        "yarn.lock": true
    },
    "json.schemas": [
        {
            "fileMatch": [
                "/config/games/*.json"
            ],
            "url": "./config/schemas/game_config.schema.json"
        }
    ]
}
